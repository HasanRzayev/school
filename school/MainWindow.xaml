<Window x:Class="school.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:school"
          xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
         TextElement.Foreground="{DynamicResource MaterialDesignBody}"
     TextElement.FontWeight="Regular"
     TextElement.FontSize="13"
     TextOptions.TextFormattingMode="Ideal"
     TextOptions.TextRenderingMode="Auto"
     Background="{ DynamicResource ikincireng}"
     FontFamily="{DynamicResource MaterialDesignFont}"
      
        mc:Ignorable="d"
        Title="MainWindow" Height="1000" Width="1000">
    <StackPanel Orientation="Horizontal">

        <Expander Grid.Column="0"
    ExpandDirection="Left">
            <Expander.Header>
                <TextBlock
        Text="MENU"
        RenderTransformOrigin=".5,.5">
                    <TextBlock.LayoutTransform>
                        <RotateTransform
            Angle="90" />
                    </TextBlock.LayoutTransform>
                </TextBlock>
            </Expander.Header>
            <StackPanel
      Orientation="Vertical"
      TextBlock.Foreground="{DynamicResource MaterialDesignBody}"
      Margin="8,24,16,24">
                <Button Height="300" HorizontalAlignment="Stretch"
  Style="{StaticResource MaterialDesignOutlinedButton}"
  ToolTip="MaterialDesignOutlinedButton"
 
 
  >
                    <Image Source="https://w7.pngwing.com/pngs/493/509/png-transparent-school-bus-bus-driver-transport-bus-text-logo-school-bus.png" ></Image>
                </Button>
                <Border CornerRadius="10"  BorderThickness="15"   >

                    <Grid
 >
                        <Button   Background="{DynamicResource esascolor}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Create Rides" />

                        </Button>
                    </Grid>
                </Border>

                <Border CornerRadius="10"  BorderThickness="15"   >
                    <Grid
 >
                        <Button  Background="{DynamicResource esascolor}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Rides" />
                        </Button>
                    </Grid>
                </Border>
                <Border CornerRadius="10"  BorderThickness="15"   >
                    <Grid
 >
                        <Button  Background="{DynamicResource esascolor}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Class" />
                        </Button>
                    </Grid>
                </Border>
                <Border CornerRadius="10"  BorderThickness="15"   >
                    <Grid
 >
                        <Button  Background="{DynamicResource esascolor}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Student" />
                        </Button>
                    </Grid>
                </Border>
                <Border CornerRadius="10"  BorderThickness="15"   >
                    <Grid
 >
                        <Button  Background="{DynamicResource esascolor}" Command="{Binding parentrelay}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Parent" />
                        </Button>
                    </Grid>
                </Border>
                <Border CornerRadius="10"  BorderThickness="15"   >
                    <Grid
 >
                        <Button Command="{Binding driverrelay}"  Background="{DynamicResource esascolor}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Driver" />
                        </Button>
                    </Grid>
                </Border>
                <Border CornerRadius="10"  BorderThickness="15"   >
                    <Grid
 >
                        <Button Command="{Binding carrelay}"  Background="{DynamicResource esascolor}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Car" />
                        </Button>
                    </Grid>
                </Border>
                <Border CornerRadius="10"  BorderThickness="15"   >
                    <Grid
 >
                        <Button Command="{Binding Holidays}"   Background="{DynamicResource esascolor}"
    Style="{StaticResource MaterialDesignRaisedButton}"

    materialDesign:ButtonAssist.CornerRadius="10"
    ToolTip="MaterialDesignRaisedButton with Round Corners"
   >
                            <TextBlock
      Text="Holidays" />
                        </Button>
                    </Grid>
                </Border>
                <Border CornerRadius="10"  BorderThickness="15" >
                    <ToggleButton
  
  ToolTip="MaterialDesignSwitchDarkToggleButton"
  IsChecked="{Binding Tooglechange}"  Command="{Binding toggledark}"   />
                </Border>
            </StackPanel>
        </Expander>


        <Frame Grid.Row="1" NavigationUIVisibility="Hidden" Background="{DynamicResource esascolor}" Content="{Binding Path=DisplayPage, Mode=TwoWay}"></Frame>


    </StackPanel>

</Window>
